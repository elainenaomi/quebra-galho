<h1>Habilidades</h1>
<h1>Solicitei:</h1>


<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Usuario</th>
      <th>Descricao</th>
      <th>Possuo Ferramenta</th>
      <th>Valor</th>
      <th>Disponibilidade</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicitei.each do |habilidade| %>
      <tr>
        <td><%= habilidade.nome %></td>
        <td><%= habilidade.usuario.login %></td>
        <td><%= habilidade.descricao %></td>
        <td><%= habilidade.possuo_ferramenta %></td>
        <td><%= habilidade.valor %></td>
        <td><%= habilidade.disponibilidade %></td>
        <% if !habilidade.categoria.nil? %>
        <td><%= habilidade.categoria.nome %></td>
        <% else %>
        <td><%="Não definido"%></td>
        <% end %>
        <td><%= link_to 'Show', habilidade %></td>
        <td><%= link_to 'Edit', edit_habilidade_path(habilidade) %></td>
        <td><%= link_to 'Destroy', habilidade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

