      <h2><%= pluralize(habilidade.errors.count, "error") %> prohibited this habilidade from being saved:</h2>

      <ul>
      <% habilidade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :descricao %>
    <%= f.text_area :descricao %>
  </div>

  <div class="field">
    <%= f.check_box :possuo_ferramenta %>
    <%= f.label :possuo_ferramenta, id: :possuo_ferramenta %>
  </div>

  <div class="field">
    <%= f.label :valor %>
    <%= f.text_area :valor %>
  </div>

  <div class="field">
    <%= f.check_box :disponibilidade %>
    <%= f.label :disponibilidade, id: :disponibilidade %>
  </div>

  <p>
  <h6>Categoria:</h6>
  <div class="field">
    <%= f.collection_select :categoria_id, Categoria.all, :id, :nome, {prompt: true}, {class: "browser-default"} %>
  </div>
  <p>
    
  <div class="actions">
    <%= f.submit %>
  </div>
